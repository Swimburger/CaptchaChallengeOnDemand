<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<script>
    (function (){
        Array.from(document.querySelectorAll('.copy-input'))
            .forEach(copyInputButton => {
                const copyTarget = copyInputButton.getAttribute('data-copy-target');
                const target = document.querySelector(copyTarget);
                copyInputButton.addEventListener('click', (e) =>
                {
                    e.preventDefault();
                    target.select();
                    document.execCommand("copy");
                })
            })
    })();
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>